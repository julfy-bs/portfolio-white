.tabs {
  width: 100%;
  height: 100%;
  max-height: 80px;
  background-color: #ffffff;
}

.tabs__list {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  height: 80px;
}

.tabs__item {
  min-width: 130px;
  height: 80px;
  padding: 0 30px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 3px solid transparent;

  &:first-child {
    border-bottom: 3px solid #383bcf;
  }
}
